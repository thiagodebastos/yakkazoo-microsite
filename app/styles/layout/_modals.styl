/* VIMEO MODAL */
.modal
    &--container
        position: absolute
        height: 0
        width: 100%
        padding-bottom 56.25%
        visibility: hidden
        opacity: 0
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        transition: opacity .5s ease-in-out
        z-index: 10

    &:before
        content: ""
        position: fixed
        visibility: hidden
        opacity: 0
        background-color: rgba(255,255,255,.95)
        top: 0
        left: 0
        height: 100%
        width: 100%
        transition: opacity .5s ease-in-out
        z-index: 10

    &:target &--container,
    &:target:before
        display: block
        visibility: visible
        opacity: 1

    &--close
        position: absolute
        top: -23px
        right: 0
        padding: 0
        color: $brand-blue
        font-family: $font-rale
        font-size: .75rem
        text-decoration: none
        z-index: 10
        border: 1px solid $brand-blue
        padding: .5em
        text-align: center
        line-height: 0.78

.video-modal

    // the actual iframe should fill its parent container's size
    & iframe,
    & object,
    & embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%

    // on desktop the modal should have a max width and be centered
    +for_breakpoint(desktop)
        & .modal--container
            width: 960px
            height: 538px
            padding-bottom: 0
    & .modal--close
        +for_breakpoint(tablet mobile)
            top: initial
            bottom: -22px

.contact-modal
    position: fixed
    left: 50%
    top: 50%
    z-index: 10
    h2
        font-size: 2.5rem
    .contact a
        font-size: 1.5rem
        text-decoration: underline
    .address a
        font-size: 1rem
    & .modal--container
        width: 20rem
        height: 20rem
    & .modal--close
        top: -20px
        right: inherit
        left: 17rem
