doctype html
html(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Experience(d) Designers of Places and Spaces')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Yakkazoo
    //- Opengraph Metadata
    meta(property='og:title' content='Yakkazoo')
    meta(property='og:type' content='website')
    meta(property='og:description' content='Experience(d) Designers of Places and Spaces')
    meta(property='og:image' content='http://www.yakkazoo.com/images/background.jpg')
    //- Favicons
    meta(name='msapplication-tap-highlight', content='no')
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='application-name', content='Yakkazoo')
    link(rel='icon', sizes='192x192', href='images/touch/favicon-yakkazoo.png')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='Yakkazoo')
    link(rel='apple-touch-icon', href='images/touch/favicon-yakkazoo.png')
    meta(name='msapplication-TileImage', content='images/touch/favicon-yakkazoo.png')
    meta(name='msapplication-TileColor', content='#00b3ea')
    meta(name='theme-color', content='#00b3ea')
    link(rel="stylesheet", href="styles/main.css")
    link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Lato:900|Passion+One|Raleway:500,600")
    script(src="https://player.vimeo.com/api/player.js")
  body
    .main-container
        include ../partials/video-modal.pug
        include ../partials/contact-modal.pug
        .flex-grid
            .col-4-lg.content-left
                block content
                include ../partials/footer.pug
            sidebar.col-8-lg.main-sidebar
                include ../partials/header
                .social-section.social-section--large
                    include ../partials/social-icons

    block scripts
    script(src="scripts/main.js")
